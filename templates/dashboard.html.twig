<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Dashboard - Tracker d'Habitudes, suivez vos habitudes quotidiennes et gérez vos invitations de groupe.">
  <title>Dashboard - Tracker d'Habitudes</title>
  <style>
    /* Reset global */
    *, *::before, *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: Arial, sans-serif;
      background-color: #f7f7f7;
      color: #333;
      display: flex;
      min-height: 100vh;
    }
    /* Sidebar */
    nav.sidebar {
      width: 250px;
      background-color: #3498db;
      color: #fff;
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      transform: translateX(-210px);
      transition: transform 0.3s ease, padding 0.3s ease;
      padding: 1rem 0.5rem;
    }
    nav.sidebar:hover {
      transform: translateX(0);
      padding: 1rem;
    }
    nav.sidebar h2 {
      text-align: center;
      margin-bottom: 2rem;
      font-size: 1.2rem;
    }
    nav.sidebar a {
      display: block;
      color: #fff;
      text-decoration: none;
      padding: 0.8rem 1rem;
      margin: 0.5rem 0;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }
    nav.sidebar a:hover {
      background-color: #2980b9;
    }
    /* Contenu principal */
    main.main-content {
      margin-left: 40px;
      padding: 2rem;
      transition: margin-left 0.3s ease;
      width: 100%;
    }
    nav.sidebar:hover ~ main.main-content {
      margin-left: 250px;
    }
    /* En-tête */
    header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    header h1 {
      font-size: 2rem;
    }
    .score {
      font-size: 1.2rem;
      background-color: #eee;
      padding: 0.5rem 1rem;
      border-radius: 5px;
    }
    /* Sections */
    section.habits, section.notifications {
      margin-bottom: 2rem;
    }
    section.habits h2, section.notifications h2 {
      margin-bottom: 1rem;
      font-size: 1.5rem;
    }
    /* Habitude */
    .habit {
      background-color: #fff;
      padding: 1rem;
      border-radius: 5px;
      margin-bottom: 1rem;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .habit p {
      margin-bottom: 0.5rem;
    }
    .habit span {
      font-weight: bold;
    }
    .habit small {
      display: block;
      margin-bottom: 0.5rem;
    }
    .habit button {
      background-color: #27ae60;
      border: none;
      color: #fff;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .habit button:hover {
      background-color: #1e8449;
    }
    .countdown {
      font-weight: bold;
      color: #2c3e50;
    }
    /* Notifications */
    .notifications ul {
      list-style-type: none;
    }
    .notifications li {
      background-color: #fff;
      padding: 1rem;
      border-radius: 5px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 1rem;
    }
    .notifications form {
      display: inline-block;
      margin-right: 0.5rem;
    }
    .message {
      background-color: #fff;
      padding: 1rem;
      border-radius: 5px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      text-align: center;
      font-size: 1.2rem;
      color: #27ae60;
    }
  </style>
</head>
<body>
  <nav class="sidebar" aria-label="Menu principal">
    <h2>Menu</h2>
    <a href="/habitsManager">Habitudes</a>
    {% if app.user %}
      <a href="{% if app.user.group %}/groupManager{% else %}/groupManager/create{% endif %}">Mon Groupe</a>
    {% else %}
      <a href="/connexion">Mon Groupe</a>
    {% endif %}
    <a href="/profil">Mon Profil</a>
    <a href="/deconnexion">Déconnexion</a>
  </nav>
  <main class="main-content">
    <header>
      <h1>Bienvenue, {{ user.pseudo }}</h1>
      <div class="score" aria-label="Score actuel">Score : <span>{{ user.score }}</span></div>
    </header>
    <section class="habits">
      <h2>Habitudes du jour</h2>
      {% set allHabitsValidated = true %}
      {% for habit in dailyHabits %}
        {% if not habit.validatedByUsers.contains(user) %}
          {% set allHabitsValidated = false %}
          <article class="habit" data-habit-id="{{ habit.Id }}" data-end-time="{{ habit.endTime|date('c') }}">
            <div>
              <p><span>{{ habit.text }}</span> - Quotidien</p>
              <small>Difficulté : {{ habit.difficulty }}</small>
              <div class="countdown" aria-live="polite"></div>
            </div>
            <form action="{{ path('toggle_habit', {'id': habit.Id}) }}" method="POST" aria-label="Marquer l'habitude comme terminée">
              <button type="submit" class="toggle">Terminé</button>
            </form>
          </article>
        {% endif %}
      {% endfor %}
      {% if allHabitsValidated %}
        <div class="message" role="status">Les tâches journalières sont accomplies !</div>
      {% endif %}
    </section>
    <section class="notifications">
      <h2>Invitations</h2>
      {% if user.receivedInvitations|length > 0 %}
        <ul>
          {% for invitation in user.receivedInvitations %}
            <li>
              Invitation de {{ invitation.sender.pseudo }} pour rejoindre {{ invitation.group.name }}
              <form action="{{ path('invitation_accept', {'id': invitation.id}) }}" method="POST" aria-label="Accepter l'invitation">
                <button type="submit">Accepter</button>
              </form>
              <form action="{{ path('invitation_decline', {'id': invitation.id}) }}" method="POST" aria-label="Refuser l'invitation">
                <button type="submit">Refuser</button>
              </form>
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p>Aucune invitation reçue.</p>
      {% endif %}
    </section>
  </main>
  
  <!-- Chargement de Luxon pour le compte à rebours -->
  <script src="https://cdn.jsdelivr.net/npm/luxon@3.3.0/build/global/luxon.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const { DateTime } = luxon;
      document.querySelectorAll('.habit').forEach(row => {
        const habitId = row.getAttribute('data-habit-id');
        const endTime = DateTime.fromISO(row.getAttribute('data-end-time'));
        const countdownElem = row.querySelector('.countdown');

        const updateCountdown = () => {
          const now = DateTime.now();
          const diff = endTime.diff(now, ['days', 'hours', 'minutes', 'seconds']);
          if (diff.as('milliseconds') <= 0) {
            countdownElem.textContent = "Terminé";
            clearInterval(interval);
            // Supprime l'habitude puis déduit les points
            fetch(`/deleteHabit/${habitId}`, { method: 'POST' })
              .then(response => {
                if (response.ok) {
                  row.remove();
                  return fetch(`/deductPoints/${habitId}`, { method: 'POST' });
                }
                throw new Error('Erreur lors de la suppression automatique.');
              })
              .then(response => {
                if (!response.ok) {
                  console.error('Erreur lors de la déduction des points.');
                }
              })
              .catch(error => console.error('Erreur:', error));
          } else {
            countdownElem.textContent = `${diff.days}j ${diff.hours}h ${diff.minutes}m ${Math.floor(diff.seconds)}s`;
          }
        };

        updateCountdown();
        const interval = setInterval(updateCountdown, 1000);
      });
    });
  </script>
</body>
</html>