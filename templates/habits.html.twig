<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestion des Habitudes - Tracker d'Habitudes</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: Arial, sans-serif;
      background: #f7f7f7;
      color: #333;
      display: flex;
      min-height: 100vh;
    }
    .sidebar {
      width: 250px;
      background: #3498db;
      color: #fff;
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      transform: translateX(-210px);
      transition: transform 0.3s;
      padding: 1rem 0.5rem;
    }
    .sidebar:hover { transform: translateX(0); padding: 1rem; }
    .sidebar h2 { text-align: center; margin-bottom: 2rem; font-size: 1.2rem; }
    .sidebar a {
      display: block; color: #fff; text-decoration: none;
      padding: 0.8rem 1rem; margin: 0.5rem 0; border-radius: 5px; transition: background 0.3s;
    }
    .sidebar a:hover { background: #2980b9; }
    .main-content {
      flex: 1;
      padding: 2rem;
      margin-left: 40px;
      transition: margin-left 0.3s;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .sidebar:hover ~ .main-content { margin-left: 250px; }
    .container {
      background: #fff;
      max-width: 900px;
      width: 100%;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1 { text-align: center; color: #3498db; margin-bottom: 1.5rem; }
    .habit-list { margin-bottom: 2rem; }
    .habit-item {
      border-bottom: 1px solid #ddd;
      padding: 0.8rem 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .habit-details { flex: 1; }
    .habit-actions button {
      margin-left: 0.5rem;
      padding: 0.4rem 0.8rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.3s;
      font-size: 0.9rem;
    }
    .habit-actions button.edit { background: #f39c12; color: #fff; }
    .habit-actions button.delete { background: #e74c3c; color: #fff; }
    .habit-form {
      border-top: 2px solid #3498db;
      padding-top: 1.5rem;
    }
    .form-group { margin-bottom: 1rem; }
    .form-group label {
      display: block;
      margin-bottom: 0.4rem;
      font-weight: 700;
      color: #333;
    }
    .form-group input, .form-group select {
      width: 100%;
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 1rem;
    }
    .form-actions {
      text-align: center;
      margin-top: 1.5rem;
    }
    .form-actions button {
      padding: 0.8rem 1.5rem;
      font-size: 1rem;
      background: #27ae60;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s;
    }
    .form-actions button:hover { background: #1e8449; }
  </style>
</head>
<body>
  <nav class="sidebar">
    <h2>Menu</h2>
    <a href="/dashboard">Dashboard</a>
    <a href="/">Connexion/Inscription</a>
    <a href="/habitsManager">Habitudes</a>
    <a href="/groupManager">Mon Groupe</a>
    <a href="/profil">Mon Profil</a>
    <a href="/">Déconnexion</a>
  </nav>
  <div class="main-content">
    <div class="container">
      <h1>Gestion des Habitudes</h1>
      <section class="habit-list">
        <h2>Habitudes existantes</h2>
        <div class="habit-item" data-id="1">
          <div class="habit-details">
            <p><strong>Texte:</strong> Faire du sport</p>
            <p><strong>Difficulté:</strong> Moyenne</p>
            <p><strong>Périodicité:</strong> Quotidienne</p>
            <p><strong>Cible:</strong> Individuelle</p>
          </div>
          <div class="habit-actions">
            <button class="edit" onclick="editHabit(1)">Modifier</button>
            <button class="delete" onclick="deleteHabit(1)">Supprimer</button>
          </div>
        </div>
        <div class="habit-item" data-id="2">
          <div class="habit-details">
            <p><strong>Texte:</strong> Méditer</p>
            <p><strong>Difficulté:</strong> Facile</p>
            <p><strong>Périodicité:</strong> Quotidienne</p>
            <p><strong>Cible:</strong> Équipe</p>
          </div>
          <div class="habit-actions">
            <button class="edit" onclick="editHabit(2)">Modifier</button>
            <button class="delete" onclick="deleteHabit(2)">Supprimer</button>
          </div>
        </div>
      </section>
      <section class="habit-form">
        <h2>Ajouter une nouvelle habitude</h2>
        <form id="addHabitForm" onsubmit="return addHabit(event)">
          <div class="form-group">
            <label for="habitText">Texte de l'habitude</label>
            <input type="text" id="habitText" name="habitText" placeholder="Décrivez l'habitude" required>
          </div>
          <div class="form-group">
            <label for="difficulty">Difficulté</label>
            <select id="difficulty" name="difficulty" required>
              <option value="">-- Sélectionnez --</option>
              <option value="very_easy">Très facile</option>
              <option value="easy">Facile</option>
              <option value="medium">Moyenne</option>
              <option value="hard">Difficile</option>
            </select>
          </div>
          <div class="form-group">
            <label for="periodicity">Périodicité</label>
            <select id="periodicity" name="periodicity" required>
              <option value="">-- Sélectionnez --</option>
              <option value="daily">Quotidienne</option>
              <option value="weekly">Hebdomadaire</option>
            </select>
          </div>
          <div class="form-group">
            <label for="target">Cible</label>
            <select id="target" name="target" required>
              <option value="">-- Sélectionnez --</option>
              <option value="individual">Individuelle</option>
              <option value="team">Équipe</option>
            </select>
          </div>
          <div class="form-actions">
            <button type="submit">Ajouter l'habitude</button>
          </div>
        </form>
      </section>
    </div>
  </div>
  <script>
    function addHabit(event) {
      event.preventDefault();
      const text = document.getElementById('habitText').value.trim();
      const difficulty = document.getElementById('difficulty').value;
      const periodicity = document.getElementById('periodicity').value;
      const target = document.getElementById('target').value;
      if (!text || !difficulty || !periodicity || !target) {
        alert("Veuillez remplir tous les champs.");
        return false;
      }
      alert("Nouvelle habitude ajoutée : " + text);
      document.getElementById('addHabitForm').reset();
      return false;
    }
    function editHabit(habitId) { alert("Modification de l'habitude avec ID : " + habitId); }
    function deleteHabit(habitId) { if (confirm("Êtes-vous sûr de vouloir supprimer cette habitude ?")) { alert("Habitude avec ID " + habitId + " supprimée."); } }
  </script>
</body>
</html>