<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestion des Habitudes - Tracker d'Habitudes</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #f7f7f7, #e0e0e0);
      color: #333;
      display: flex;
      min-height: 100vh;
      transition: background 0.3s;
    }
    .sidebar {
      width: 250px;
      background: #3498db;
      color: #fff;
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      transform: translateX(-210px);
      transition: transform 0.3s, padding 0.3s;
      padding: 1rem 0.5rem;
    }
    .sidebar:hover { transform: translateX(0); padding: 1rem; }
    .sidebar h2 {
      text-align: center;
      margin-bottom: 2rem;
      font-size: 1.2rem;
    }
    .sidebar a {
      display: block;
      color: #fff;
      text-decoration: none;
      padding: 0.8rem 1rem;
      margin: 0.5rem 0;
      border-radius: 5px;
      transition: background 0.3s;
    }
    .sidebar a:hover { background: #2980b9; }
    .main-content {
      flex: 1;
      padding: 2rem;
      margin-left: 40px;
      transition: margin-left 0.3s;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .sidebar:hover ~ .main-content { margin-left: 250px; }
    .container {
      background: #fff;
      max-width: 900px;
      width: 100%;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1 { text-align: center; color: #3498db; margin-bottom: 1.5rem; }
    .habit-list { margin-bottom: 2rem; }
    .habit-item {
      border-bottom: 1px solid #ddd;
      padding: 0.8rem 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: background 0.3s;
    }
    .habit-item:hover { background: #f9f9f9; }
    .habit-details { flex: 1; }
    .habit-details p { margin: 0.3rem 0; }
    .habit-actions button {
      margin-left: 0.5rem;
      padding: 0.4rem 0.8rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.3s;
      font-size: 0.9rem;
    }
    .habit-actions button.edit { background: #f39c12; color: #fff; }
    .habit-actions button.delete { background: #e74c3c; color: #fff; }
    .habit-actions button.delete:hover { background: #c0392b; }
    .habit-form {
      border-top: 2px solid #3498db;
      padding-top: 1.5rem;
    }
    .form-group { margin-bottom: 1rem; }
    .form-group label {
      display: block;
      margin-bottom: 0.4rem;
      font-weight: 700;
      color: #333;
    }
    .form-group input, .form-group select {
      width: 100%;
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 1rem;
    }
    .form-actions {
      text-align: center;
      margin-top: 1.5rem;
    }
    .form-actions button {
      padding: 0.8rem 1.5rem;
      font-size: 1rem;
      background: #27ae60;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s;
    }
    .form-actions button:hover { background: #1e8449; }
  </style>
</head>
<nav class="sidebar">
  <h2>Menu</h2>
  <a href="/dashboard">Dashboard</a>
  <a href="/">Connexion/Inscription</a>
  <a href="/habitsManager">Habitudes</a>
  <a href="/groupManager">Mon Groupe</a>
  <a href="/points">Journal des Points</a>
  <a href="/profil">Mon Profil</a>
  <a href="/">Déconnexion</a>
</nav>

  <div class="main-content">
    <div class="container">
      <h1>Gestion des Habitudes</h1>
      <section class="habit-list">
        <h2>Habitudes existantes</h2>
        {% for habit in habits %}
          <div class="habit-item" data-id="{{ habit.habit_id }}" style="border-left: 5px solid {{ habit.color }};">
            <div class="habit-details">
              <p><strong>Texte:</strong> {{ habit.text }}</p>
              <p><strong>Difficulté:</strong> {{ habit.difficulty }}</p>
              <p><strong>Début:</strong> {{ habit.start_time|date('d/m/Y') }}</p>
              <p><strong>Fin:</strong> {{ habit.end_time|date('d/m/Y') }}</p>
              <p><strong>Créé le:</strong> {{ habit.created_at|date('d/m/Y') }}</p>
              {% if habit.completion_date is not null %}
                <p><strong>Complété le:</strong> {{ habit.completion_date|date('d/m/Y') }}</p>
              {% endif %}
              <p><strong>Status:</strong> {{ habit.status ? 'Terminé' : 'En attente' }}</p>
              <p><strong>Points:</strong> {{ habit.points }}</p>
            </div>
            <div class="habit-actions">
              <button class="edit" onclick="editHabit('{{ habit.habit_id }}')">Modifier</button>
              <button class="delete" onclick="deleteHabit('{{ habit.habit_id }}')">Supprimer</button>
            </div>
          </div>
        {% else %}
          <p>Aucune habitude trouvée.</p>
        {% endfor %}
      </section>
      <section class="habit-form">
        <h2>Ajouter une nouvelle habitude</h2>
        <form id="addHabitForm" onsubmit="return addHabit(event)" action="{{ path('add_habit') }}" method="POST">
          <div class="form-group">
            <label for="habitText">Texte de l'habitude</label>
            <input type="text" id="habitText" name="text" placeholder="Décrivez l'habitude" required>
          </div>
          <div class="form-group">
            <label for="difficulty">Difficulté</label>
            <select id="difficulty" name="difficulty" required>
              <option value="">-- Sélectionnez --</option>
              <option value="1">Très facile</option>
              <option value="2">Facile</option>
              <option value="3">Moyenne</option>
              <option value="4">Difficile</option>
            </select>
          </div>
          <div class="form-group">
            <label for="start_time">Début</label>
            <input type="date" id="start_time" name="start_time" required>
          </div>
          <div class="form-group">
            <label for="end_time">Fin</label>
            <input type="date" id="end_time" name="end_time" required>
          </div>
          <div class="form-group">
            <label for="color">Couleur (hex)</label>
            <input type="text" id="color" name="color" placeholder="#5563DE" required>
          </div>
          <div class="form-group">
            <label for="target">Cible</label>
            <select id="target" name="target" required>
              <option value="">-- Sélectionnez --</option>
              <option value="individual">Individuelle</option>
              <option value="team">Équipe</option>
            </select>
          </div>
          <div class="form-actions">
            <button type="submit">Ajouter l'habitude</button>
          </div>
        </form>
      </section>
    </div>
  </div>
  <script>
    function addHabit(event) {
      event.preventDefault();
      // Ici, vous pouvez utiliser AJAX pour envoyer le formulaire, ou laisser Symfony traiter la soumission.
      alert("Nouvelle habitude ajoutée !");
      document.getElementById('addHabitForm').reset();
      return false;
    }
    function editHabit(habitId) {
      alert("Modification de l'habitude avec ID : " + habitId);
    }
    function deleteHabit(habitId) {
      if (confirm("Êtes-vous sûr de vouloir supprimer cette habitude ?")) {
        alert("Habitude avec ID " + habitId + " supprimée.");
      }
    }
    document.addEventListener("mousemove", function(e) {
      let x = e.clientX / window.innerWidth;
      let y = e.clientY / window.innerHeight;
      document.body.style.background = `linear-gradient(135deg, rgba(116,171,226,${0.8 - x * 0.4}), rgba(85,99,222,${0.8 - y * 0.4}))`;
    });
  </script>
</body>
</html>